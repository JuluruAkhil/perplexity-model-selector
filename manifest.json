{
  "manifest_version": 3,
  "name": "AI Model Selector",
  "version": "1.0",
  "description": "Adds AI model selection to the search interface",
  "permissions": ["activeTab"],
  "host_permissions": ["https://www.perplexity.ai/*"],
  "content_scripts": [
    {
      "matches": ["https://www.perplexity.ai/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
